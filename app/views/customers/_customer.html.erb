<div class="customer-card box">
  <div class="media">
    <div class="media-left">
      <% if customer.image.attached? %>
        <%= image_tag customer.image.variant(resize_to_limit: [100, 100]), alt: customer.full_name %>
        <% else %>
        <%= image_tag "example.png", alt: "No image" %>
        <% end %>
    </div>
    <div class="media-content">
      <p class="title is-5"><%= customer.full_name %></p>
      <p><strong>Phone:</strong> <%= customer.phone_number %></p>
      <p><strong>Email:</strong> <%= customer.email_address.presence || "N/A" %></p>
      <p><strong>Notes:</strong> <%= truncate(customer.notes, length: 80) %></p>
    </div>
  </div>
</div>
